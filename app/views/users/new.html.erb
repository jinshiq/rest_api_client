<p><h1>Users</h1></p>
<hr>

<table style="width:80%">
  <tr>
	<th>id</th>
	<th>user_name</th>
	<th>user_email</th>
	<th>api_key</th>
	<th></th>
	<th></th>
  </tr>   
  
  <% @users.each do |user| %>
	<tr>
	  <td><%= user["id"] %></td>
	  <td><%= user["name"] %></td>
	  <td><%= user["email"] %></td>
	  <td><%= user["api_key"] %></td>
      <td><%= link_to "Edit", edit_user_path(user["id"]) %></td> 
	  <td><%= link_to "Delete", user_path(user["id"]), method: :delete, data: { confirm: "Are you sure?"} %></td> 	  
    </tr>
  <% end %>

</table>

